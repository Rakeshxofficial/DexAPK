---
export const prerender = true; // Prerender the homepage for better performance

import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import FeaturedApps from '../components/FeaturedApps.astro';
import Footer from '../components/Footer.astro';

// Preload critical assets
const preloadAssets = [
  { href: '/assets/hero-pattern.webp', as: 'image' }
];
---

<Layout title="DexAPK - Fast & Secure APK Downloads">
  {/* Preload critical assets */}
  {preloadAssets.map(asset => (
    <link rel="preload" href={asset.href} as={asset.as} fetchpriority="high" />
  ))}
  <Header />
  <main>
    <Hero />
    <FeaturedApps />
  </main>
  <Footer />
</Layout>