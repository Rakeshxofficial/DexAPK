---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BreadcrumbNav from '../../components/BreadcrumbNav.astro';
import DownloadTasksModal from '../../components/DownloadTasksModal.astro';
import { getAppBySlug, getAppDownloadTasksBySlug } from '../../lib/supabase.js';

const { slug } = Astro.params;

// Get app data
let app = null;
try {
  app = await getAppBySlug(slug);
} catch (error) {
  console.error('Error loading app:', error);
}

// If app not found, return 404
if (!app) {
  return new Response(null, {
    status: 404,
    statusText: 'Not found'
  });
}

// Check if app has download page disabled
if (app.disable_download_page) {
  // Redirect directly to download URL
  return Astro.redirect(app.download_url || `/${app.slug}`);
}

// Get download tasks for this app
let downloadTasks = [];
try {
  downloadTasks = await getAppDownloadTasksBySlug(slug);
} catch (error) {
  console.error('Error loading download tasks:', error);
}

const title = `Download ${app.name} v${app.version} MOD APK - DexAPK`;
const description = `Download ${app.name} MOD APK v${app.version} with premium features unlocked. Fast and secure download.`;
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
    
    <!-- Enhanced Breadcrumbs -->
    <div class="breadcrumb-wrapper">
      <BreadcrumbNav 
        items={[
          { label: 'Home', href: '/' },
          { label: 'Apps', href: '/apps' },
          { label: app.category, href: `/categories/${app.category.toLowerCase()}` },
          { label: app.name, href: `/${app.slug}` },
          { label: 'Download', href: `/${app.slug}/download`, current: true }
        ]}
      />
    </div>

    <!-- Download Page Content -->
    <section class="py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- App Header -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-sm border border-gray-200 dark:border-gray-700 mb-8 text-center">
          
          <!-- App Icon -->
          <div class="w-24 h-24 mx-auto mb-6 bg-white dark:bg-gray-700 rounded-3xl shadow-lg flex items-center justify-center overflow-hidden">
            {app.icon ? (
              <img 
                src={app.icon} 
                alt={`${app.name} icon`}
                class="w-full h-full object-cover rounded-3xl"
                loading="eager"
              />
            ) : (
              <svg class="w-16 h-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            )}
          </div>

          <!-- App Title -->
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Download {app.name} v{app.version}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
            MOD APK with Premium Features Unlocked
          </p>

          <!-- App Meta -->
          <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-gray-600 dark:text-gray-400 mb-8">
            <div class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              <span>v{app.version}</span>
            </div>
            <div class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
              </svg>
              <span>{app.size}</span>
            </div>
            <div class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
              </svg>
              <span>{app.last_updated}</span>
            </div>
          </div>

          <!-- Download Button -->
          <button
            id="download-button"
            data-app-slug={app.slug}
            data-download-url={app.download_url}
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-lg font-semibold rounded-2xl hover:from-blue-700 hover:to-purple-700 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer"
          >
            <svg class="w-6 h-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
            </svg>
            Download Now
          </button>

        </div>

        <!-- Download Info -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-sm border border-gray-200 dark:border-gray-700 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Download Information</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Safe & Secure</p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">Scanned for malware</p>
                </div>
              </div>
              
              <div class="flex items-center">
                <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Fast Download</p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">High-speed servers</p>
                </div>
              </div>
              
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Premium Unlocked</p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">All features available</p>
                </div>
              </div>
            </div>
            
            <div class="space-y-4">
              <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                <h3 class="font-medium text-gray-900 dark:text-white mb-2">File Details</h3>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Version:</span>
                    <span class="text-gray-900 dark:text-white">v{app.version}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Size:</span>
                    <span class="text-gray-900 dark:text-white">{app.size}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Category:</span>
                    <span class="text-gray-900 dark:text-white">{app.category}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Requirements:</span>
                    <span class="text-gray-900 dark:text-white">{app.requirements}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Installation Guide -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-sm border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Installation Guide</h2>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4 flex-shrink-0">1</div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Download the APK</h3>
                <p class="text-gray-600 dark:text-gray-400">Click the download button above to get the {app.name} MOD APK file.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4 flex-shrink-0">2</div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Enable Unknown Sources</h3>
                <p class="text-gray-600 dark:text-gray-400">Go to Settings > Security > Unknown Sources and enable it to allow APK installation.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4 flex-shrink-0">3</div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Install the APK</h3>
                <p class="text-gray-600 dark:text-gray-400">Locate the downloaded file and tap to install {app.name} on your device.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4 flex-shrink-0">4</div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Enjoy Premium Features</h3>
                <p class="text-gray-600 dark:text-gray-400">Open the app and enjoy all premium features unlocked!</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>

  </main>
  
  <!-- Download Tasks Modal -->
  <DownloadTasksModal appSlug={app.slug} />
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const downloadButton = document.getElementById('download-button');
    
    if (downloadButton) {
      downloadButton.addEventListener('click', function() {
        const downloadUrl = this.getAttribute('data-download-url');
        
        if (downloadUrl && downloadUrl !== '#') {
          // Direct download
          window.open(downloadUrl, '_blank', 'noopener,noreferrer');
        } else {
          // Show tasks modal or fallback
          console.log('No download URL available');
        }
      });
    }
  });
</script>

<style>
  /* Ensure minimum touch target sizes */
  button, a {
    min-width: 44px;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Improved focus styles */
  button:focus, a:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>