          <div class="info-card">
            <div class="info-icon publisher">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </div>
            <div class="info-text">
              <div class="info-label">Publisher</div>
              <div class="info-value">{app.publisher}</div>
            </div>
          </div>
          
          <div class="info-card">
            <div class="info-icon requirements">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                <line x1="8" y1="21" x2="16" y2="21"></line>
                <line x1="12" y1="17" x2="12" y2="21"></line>
              </svg>
            </div>
            <div class="info-text">
              <div class="info-label">Requirements</div>
              <div class="info-value">{app.requirements}</div>
            </div>
          </div>
          
          <div class="info-card">
            <div class="info-icon category">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <rect x="9" y="9" width="6" height="6"></rect>
              </svg>
            </div>
            <div class="info-text">
              <div class="info-label">Category</div>
              <div class="info-value">{app.category}</div>
            </div>
          </div>
          
          <div class="info-card">
            <div class="info-icon size">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
              </svg>
            </div>
            <div class="info-text">
              <div class="info-label">Size</div>
              <div class="info-value">{app.size}</div>
            </div>
          </div>
        </div>

        <!-- Screenshots -->
        {app.screenshots && app.screenshots.length > 0 && (
          <section class="card">
            <h2 class="card-title">Screenshots</h2>
            <amp-carousel 
              width="400" 
              height="300" 
              layout="responsive" 
              type="slides"
              class="screenshots"
            >
              {app.screenshots.map((screenshot, index) => (
                <div class="screenshot">
                  <amp-img 
                    src={screenshot} 
                    alt={`${app.name} screenshot ${index + 1}`}
                    width="300" 
                    height="533"
                    layout="fill"
                  ></amp-img>
                </div>
              ))}
            </amp-carousel>
          </section>
        )}

        <!-- MOD Info -->
        {app.mod_info && app.mod_info.length > 0 && (
          <section class="mod-info">
            <div class="mod-info-title">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem;">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              MOD Features
            </div>
            <ul class="mod-info-list">
              {app.mod_info.map(info => (
                <li class="mod-info-item">{info}</li>
              ))}
            </ul>
          </section>
        )}

        <!-- Article Content -->
        <article class="card">
          <div class="article-content" set:html={htmlContent}></div>
        </article>

        <!-- FAQ -->
        <section class="card">
          <h2 class="card-title">Frequently Asked Questions</h2>
          <amp-accordion>
            <section>
              <h4>Is {app.name} safe to use?</h4>
              <div>
                <p>Yes, our {app.name} is thoroughly tested and scanned for malware. It's completely safe to install and use on your Android device.</p>
              </div>
            </section>
            
            <section>
              <h4>Do I need to root my device?</h4>
              <div>
                <p>No, this {app.name} works on both rooted and non-rooted devices. No root access is required for installation or usage.</p>
              </div>
            </section>
            
            <section>
              <h4>What's new in version {app.version}?</h4>
              <div>
                <p>Version {app.version} includes enhanced performance, improved stability, bug fixes, and new premium features. Check the changelog above for detailed information.</p>
              </div>
            </section>
            
            <section>
              <h4>How do I install {app.name}?</h4>
              <div>
                <p>Download the APK file, enable "Unknown Sources" in your Android settings, then tap the downloaded file to install it on your device.</p>
              </div>
            </section>
          </amp-accordion>
        </section>

      </div>

      <!-- Sidebar Content -->
      <aside>
        
        <!-- Related Apps -->
        {relatedApps.length > 0 && (
          <section class="card">
            <h3 class="card-title">Related Apps</h3>
            <div class="related-apps">
              {relatedApps.map(relatedApp => (
                <a href={`/${relatedApp.slug}`} class="related-app">
                  <div class="related-app-icon">
                    {relatedApp.icon ? (
                      <amp-img 
                        src={relatedApp.icon} 
                        alt={relatedApp.name}
                        width="48" 
                        height="48"
                        layout="fixed"
                      ></amp-img>
                    ) : (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                        <line x1="8" y1="21" x2="16" y2="21"></line>
                        <line x1="12" y1="17" x2="12" y2="21"></line>
                      </svg>
                    )}
                  </div>
                  <div class="related-app-info">
                    <div class="related-app-name">{relatedApp.name}</div>
                    <div class="related-app-category">{relatedApp.category}</div>
                  </div>
                </a>
              ))}
            </div>
          </section>
        )}

      </aside>

    </div>

  </main>

  <!-- Sidebar Menu -->
  <amp-sidebar id="sidebar" layout="nodisplay" side="left" class="sidebar">
    <div class="sidebar-header">
      <h2 class="sidebar-title">Menu</h2>
      <button class="close-button" on="tap:sidebar.close" aria-label="Close menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <nav>
      <a href="/" class="nav-link">Home</a>
      <a href="/apps" class="nav-link">All Apps</a>
      <a href="/categories" class="nav-link">Categories</a>
      <a href="/trending" class="nav-link">Trending</a>
      <a href="/publisher" class="nav-link">Publishers</a>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/about" class="nav-link">About</a>
      <a href="/contact" class="nav-link">Contact</a>
    </nav>
  </amp-sidebar>

</body>
</html>