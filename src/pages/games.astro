---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getAppsByCategory } from '../lib/supabase.js';

// Fetch games
let games = [];
try {
  games = await getAppsByCategory('Games', 100);
} catch (error) {
  console.error('Error loading games:', error);
  games = [];
}

const title = "MOD Games - DexAPK";
const description = "Download the best modified games with unlimited resources, unlocked features, and premium content.";
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
    
    <!-- Breadcrumbs -->
    <nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700" aria-label="Breadcrumb">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ol class="flex items-center space-x-2 py-4 text-sm" role="list">
          <li>
            <a href="/" class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200" aria-label="Go to homepage">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
              </svg>
              <span class="sr-only">Home</span>
            </a>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="ml-2 font-medium text-gray-900 dark:text-white" aria-current="page">Games</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Page Header -->
    <section class="bg-gradient-to-r from-green-600 via-blue-600 to-purple-600 py-12 sm:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="flex items-center justify-center mb-6">
          <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
          MOD Games
        </h1>
        <p class="text-xl text-green-100 max-w-3xl mx-auto mb-6">
          Unlock unlimited resources, premium features, and exclusive content in your favorite games
        </p>
        <div class="flex flex-wrap items-center justify-center gap-6 text-green-100">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="font-medium">Unlimited Resources</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="font-medium">Premium Unlocked</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="font-medium">{games.length} Games Available</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="bg-white dark:bg-gray-800 py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Unlimited Money</h3>
            <p class="text-gray-600 dark:text-gray-400">Get unlimited coins, gems, and in-game currency to enhance your gaming experience.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">All Levels Unlocked</h3>
            <p class="text-gray-600 dark:text-gray-400">Access all game levels, characters, and premium content from the start.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">No Ads</h3>
            <p class="text-gray-600 dark:text-gray-400">Enjoy uninterrupted gaming with all advertisements removed.</p>
          </div>

        </div>
      </div>
    </section>

    <!-- Search and Filters -->
    <section class="bg-gray-50 dark:bg-gray-900 py-6">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
          
          <!-- Search -->
          <div class="flex-1 max-w-md">
            <label for="search-games" class="sr-only">Search games</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <input
                type="text"
                id="search-games"
                class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-white transition-colors duration-200"
                placeholder="Search MOD games..."
                aria-label="Search for MOD games"
              />
            </div>
          </div>

          <!-- Sort Filter -->
          <div>
            <label for="sort-games" class="sr-only">Sort games</label>
            <select
              id="sort-games"
              class="px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-white transition-colors duration-200"
              aria-label="Sort games"
            >
              <option value="rating">Highest Rated</option>
              <option value="name">Name A-Z</option>
              <option value="newest">Newest First</option>
              <option value="popular">Most Popular</option>
            </select>
          </div>

        </div>
      </div>
    </section>

    <!-- Games Grid -->
    <section class="py-8 sm:py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Results Info -->
        <div class="flex items-center justify-between mb-6">
          <p class="text-gray-600 dark:text-gray-400" id="games-count" aria-live="polite">
            Showing <span id="showing-games">{games.length}</span> of <span id="total-games">{games.length}</span> games
          </p>
        </div>

        <!-- Games Container -->
        <div id="games-container" class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 sm:gap-6" role="grid" aria-label="MOD Games collection">
          
          {games.length > 0 ? games.map((game, index) => (
            <article 
              role="gridcell"
              class="game-card group relative bg-white dark:bg-gray-800 rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 dark:border-gray-700 focus-within:ring-2 focus-within:ring-green-500 focus-within:ring-offset-2 dark:focus-within:ring-offset-gray-900"
              data-game-name={game.name}
              data-game-rating={game.rating}
              data-game-date={game.created_at}
            >
              <a 
                href={`/${game.slug}`} 
                class="block w-full h-full focus:outline-none"
                aria-label={`Download ${game.name} v${game.version} MOD Game - Unlimited resources and premium features unlocked`}
              >
                <div class="relative h-32 sm:h-40 bg-gradient-to-br from-green-500 via-blue-500 to-purple-600 flex items-center justify-center overflow-hidden group-hover:scale-105 transition-transform duration-300">
                  <!-- Status Badges -->
                  <div class="absolute top-2 left-2 flex gap-1.5 z-10">
                    <span class="bg-green-500 text-white text-xs font-semibold px-2 py-0.5 rounded-full flex items-center gap-1 shadow-sm">
                      <svg class="w-2.5 h-2.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                      </svg>
                      UNLIMITED
                    </span>
                    <span class="bg-red-500 text-white text-xs font-semibold px-2 py-0.5 rounded-full shadow-sm">
                      MOD
                    </span>
                  </div>
                  
                  <!-- Game Icon -->
                  <div class="w-20 h-20 sm:w-24 sm:h-24 bg-white/90 dark:bg-gray-800/90 rounded-2xl sm:rounded-3xl flex items-center justify-center backdrop-blur-sm group-hover:bg-white/95 dark:group-hover:bg-gray-800/95 transition-colors duration-300 shadow-lg overflow-hidden">
                    {game.icon ? (
                      <img 
                        src={game.icon} 
                        alt={`${game.name} icon`}
                        class="w-full h-full object-cover rounded-2xl sm:rounded-3xl"
                        loading="lazy"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                      />
                      <div class="w-12 h-12 sm:w-16 sm:h-16 text-gray-700 dark:text-gray-300 hidden items-center justify-center">
                        <svg class="w-full h-full" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                      </div>
                    ) : (
                      <svg class="w-12 h-12 sm:w-16 sm:h-16 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                      </svg>
                    )}
                  </div>
                  
                  <!-- Hover Overlay -->
                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
                    <div class="bg-white/20 backdrop-blur-sm rounded-full p-3 transform scale-0 group-hover:scale-100 transition-transform duration-300">
                      <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                      </svg>
                    </div>
                  </div>
                </div>
                
                <!-- Game Details -->
                <div class="p-3 group-hover:bg-gray-50 dark:group-hover:bg-gray-700 transition-colors duration-300">
                  <h3 class="text-sm sm:text-base font-semibold text-gray-900 dark:text-white mb-1 truncate group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors duration-300">
                    {game.name}
                  </h3>
                  <p class="text-xs sm:text-sm font-medium mb-2 text-green-600 dark:text-green-400 transition-colors duration-300">
                    MOD Game
                  </p>
                  <div class="flex items-center justify-between text-xs text-gray-600 dark:text-gray-400">
                    <div class="flex items-center gap-1" title={`Rating ${game.rating}/5`}>
                      <svg class="w-3 h-3 text-yellow-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <span class="text-xs">{game.rating}</span>
                    </div>
                    <div class="flex items-center gap-1" title={`File size: ${game.size}`}>
                      <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                      </svg>
                      <span class="text-xs">{game.size}</span>
                    </div>
                  </div>
                </div>
                
                <!-- Screen Reader Content -->
                <div class="sr-only">
                  Rating: {game.rating} out of 5 stars with {game.votes} votes.
                  Last updated: {game.last_updated}.
                  Publisher: {game.publisher}.
                  Requirements: {game.requirements}.
                  MOD features: Unlimited resources, premium unlocked, no ads.
                  Click to download and view more details.
                </div>
              </a>
            </article>
          )) : (
            <div class="col-span-full text-center py-12" role="status" aria-live="polite">
              <div class="text-gray-500 dark:text-gray-400">
                <svg class="w-16 h-16 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <h3 class="text-lg font-medium mb-2">No games available</h3>
                <p class="text-sm">Please connect to Supabase to load game data.</p>
              </div>
            </div>
          )}

        </div>

      </div>
    </section>

  </main>
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-games');
    const sortFilter = document.getElementById('sort-games');
    const gamesContainer = document.getElementById('games-container');
    const showingGames = document.getElementById('showing-games');
    const totalGames = document.getElementById('total-games');
    
    let allGames = Array.from(document.querySelectorAll('.game-card'));
    let filteredGames = [...allGames];
    
    // Initialize
    updateGamesCount();
    
    // Search functionality
    searchInput?.addEventListener('input', function() {
      filterAndSort();
    });
    
    // Sort filter
    sortFilter?.addEventListener('change', function() {
      filterAndSort();
    });
    
    function filterAndSort() {
      const searchTerm = searchInput?.value.toLowerCase() || '';
      const sortBy = sortFilter?.value || 'rating';
      
      // Filter games
      filteredGames = allGames.filter(game => {
        const gameName = game.dataset.gameName?.toLowerCase() || '';
        return !searchTerm || gameName.includes(searchTerm);
      });
      
      // Sort games
      filteredGames.sort((a, b) => {
        switch (sortBy) {
          case 'name':
            return (a.dataset.gameName || '').localeCompare(b.dataset.gameName || '');
          case 'newest':
            return new Date(b.dataset.gameDate || 0) - new Date(a.dataset.gameDate || 0);
          case 'popular':
            return (parseFloat(b.dataset.gameRating) || 0) - (parseFloat(a.dataset.gameRating) || 0);
          case 'rating':
          default:
            return (parseFloat(b.dataset.gameRating) || 0) - (parseFloat(a.dataset.gameRating) || 0);
        }
      });
      
      // Update display
      updateDisplay();
      updateGamesCount();
      
      // Announce to screen readers
      announceToScreenReader(`Showing ${filteredGames.length} games`);
    }
    
    function updateDisplay() {
      // Hide all games
      allGames.forEach(game => {
        game.style.display = 'none';
      });
      
      // Show filtered games
      filteredGames.forEach((game, index) => {
        game.style.display = 'block';
        game.style.order = index;
      });
    }
    
    function updateGamesCount() {
      if (showingGames && totalGames) {
        showingGames.textContent = filteredGames.length;
        totalGames.textContent = allGames.length;
      }
    }
    
    function announceToScreenReader(message) {
      const announcement = document.createElement('div');
      announcement.setAttribute('aria-live', 'polite');
      announcement.setAttribute('aria-atomic', 'true');
      announcement.className = 'sr-only';
      announcement.textContent = message;
      
      document.body.appendChild(announcement);
      
      setTimeout(() => {
        document.body.removeChild(announcement);
      }, 1000);
    }
  });
</script>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  .game-card a:focus-visible {
    outline: 2px solid #10b981;
    outline-offset: 2px;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .game-card,
    .game-card * {
      transition: none !important;
      animation: none !important;
    }
  }
</style>