<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-trending');
    const categoryFilter = document.getElementById('trending-category-filter');
    const trendingFilter = document.getElementById('trending-filter');
    const appsContainer = document.getElementById('trending-apps-container');
    const showingCount = document.getElementById('showing-trending-count');
    const totalCount = document.getElementById('total-trending-count');
    
    let allApps = Array.from(document.querySelectorAll('.trending-app-card'));
    let filteredApps = [...allApps];
    
    // Initialize
    updateResultsCount();
    
    // Search functionality
    searchInput?.addEventListener('input', function() {
      filterApps();
    });
    
    // Category filter
    categoryFilter?.addEventListener('change', function() {
      filterApps();
    });
    
    // Trending filter
    trendingFilter?.addEventListener('change', function() {
      filterApps();
    });
    
    function filterApps() {
      const searchTerm = searchInput?.value.toLowerCase() || '';
      const selectedCategory = categoryFilter?.value || '';
      const selectedTrending = trendingFilter?.value || '';
      
      // Filter apps
      filteredApps = allApps.filter(app => {
        const appName = app.dataset.appName?.toLowerCase() || '';
        const appCategory = app.dataset.appCategory || '';
        const appRating = parseFloat(app.dataset.appRating) || 0;
        const appFeatured = app.dataset.appFeatured === 'true';
        const trendingPosition = parseInt(app.dataset.trendingPosition) || 999;
        
        const matchesSearch = !searchTerm || appName.includes(searchTerm);
        const matchesCategory = !selectedCategory || appCategory === selectedCategory;
        
        let matchesTrending = true;
        if (selectedTrending === 'featured') {
          matchesTrending = appFeatured;
        } else if (selectedTrending === 'high-rated') {
          matchesTrending = appRating >= 4.5;
        } else if (selectedTrending === 'popular') {
          matchesTrending = trendingPosition <= 10;
        }
        
        return matchesSearch && matchesCategory && matchesTrending;
      });
      
      // Update display
      updateDisplay();
      updateResultsCount();
      
      // Announce to screen readers
      announceToScreenReader(`Showing ${filteredApps.length} trending apps`);
    }
    
    function updateDisplay() {
      // Hide all apps
      allApps.forEach(app => {
        app.style.display = 'none';
      });
      
      // Show filtered apps
      filteredApps.forEach((app, index) => {
        app.style.display = 'block';
        app.style.order = index;
      });
    }
    
    function updateResultsCount() {
      if (showingCount && totalCount) {
        showingCount.textContent = filteredApps.length;
        totalCount.textContent = allApps.length;
      }
    }
    
    function announceToScreenReader(message) {
      const announcement = document.createElement('div');
      announcement.setAttribute('aria-live', 'polite');
      announcement.setAttribute('aria-atomic', 'true');
      announcement.className = 'sr-only';
      announcement.textContent = message;
      
      document.body.appendChild(announcement);
      
      setTimeout(() => {
        document.body.removeChild(announcement);
      }, 1000);
    }
  });
</script>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  .trending-app-card a:focus-visible {
    outline: 2px solid #ef4444;
    outline-offset: 2px;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .trending-app-card,
    .trending-app-card * {
      transition: none !important;
      animation: none !important;
    }
  }
  
  /* Trending animation */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>