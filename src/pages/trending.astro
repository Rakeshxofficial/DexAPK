---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProgressiveImage from '../components/ProgressiveImage.astro';
import { getAllApps } from '../lib/supabase.js';

// Fetch all apps and calculate trending score
let allApps = [];
try {
  allApps = await getAllApps();
} catch (error) {
  console.error('Error loading apps:', error);
  allApps = [];
}

// Calculate trending score (rating * votes + featured bonus)
const trendingApps = allApps
  .map(app => ({
    ...app,
    trendingScore: (app.rating * app.votes) + (app.is_featured ? 1000 : 0)
  }))
  .sort((a, b) => b.trendingScore - a.trendingScore);

const title = "Trending MOD APKs - DexAPK";
const description = "Discover the hottest and most popular MOD APKs trending right now with premium features unlocked.";
