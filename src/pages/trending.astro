                aria-label={`Download ${app.name} v${app.version} MOD APK - Trending #${index + 1} ${app.category} app with premium features unlocked`}
              >
                <div class="relative h-32 sm:h-40 bg-gray-100 dark:bg-gray-700 flex items-center justify-center overflow-hidden group-hover:scale-105 transition-transform duration-300">
                  <!-- Trending Position Badge -->
                  <div class="absolute top-2 left-2 flex gap-1.5 z-10">
                    <span class={`text-white text-xs font-bold px-2 py-0.5 rounded-full flex items-center gap-1 shadow-sm ${
                      index === 0 ? 'bg-yellow-500' : 
                      index === 1 ? 'bg-gray-400' : 
                      index === 2 ? 'bg-orange-600' : 
                      'bg-red-500'
                    }`}>
                      <svg class="w-2.5 h-2.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
                      </svg>
                      #{index + 1}
                    </span>
                    {app.is_featured && (
                      <span class="bg-blue-500 text-white text-xs font-semibold px-2 py-0.5 rounded-full shadow-sm">
                        FEATURED
                      </span>
