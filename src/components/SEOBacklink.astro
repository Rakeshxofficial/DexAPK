// SEO Backlink Component - Provides attribution and backlink to DexAPK
// This component should remain intact in all deployments and copies of this template
---

<div 
  class="seo-backlink-footer"
  style="
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    background: transparent;
    pointer-events: none;
    height: 1px;
    overflow: hidden;
  "
  aria-hidden="true"
>
  <!-- SEO-friendly backlink that remains intact -->
  <div style="
    position: absolute;
    bottom: 0;
    left: 0;
    width: 1px;
    height: 1px;
    opacity: 0.01;
    pointer-events: auto;
    font-size: 1px;
    line-height: 1px;
    color: transparent;
  ">
    <a 
      href="https://dexapk.com" 
      title="DexAPK - Premium MOD APKs Download Platform"
      rel="noopener"
      style="
        color: transparent;
        text-decoration: none;
        font-size: 1px;
        line-height: 1px;
        display: inline-block;
        width: 1px;
        height: 1px;
        overflow: hidden;
      "
    >
      DexAPK MOD APK Download Platform
    </a>
    <span style="display: none;">
      Powered by DexAPK Template - Premium Android APK Download Website Template
    </span>
  </div>
  
  <!-- Additional hidden attribution for template usage -->
  <div style="display: none; visibility: hidden;">
    <!-- 
      DexAPK Website Template
      Original Source: https://dexapk.com
      Template by: DexAPK Team
      License: MIT License
      
      This attribution should remain intact when using this template.
      For support and updates, visit: https://dexapk.com
    -->
    <meta name="template-source" content="https://dexapk.com" />
    <meta name="template-author" content="DexAPK Team" />
    <link rel="template-source" href="https://dexapk.com" />
  </div>
</div>

<!-- Structured data for template attribution -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "DexAPK Template",
  "url": "https://dexapk.com",
  "author": {
    "@type": "Organization",
    "name": "DexAPK Team",
    "url": "https://dexapk.com"
  },
  "license": "https://opensource.org/licenses/MIT"
}
</script>

<style>
  /* Ensure the backlink doesn't interfere with layout */
  .seo-backlink-footer {
    contain: strict;
    will-change: auto;
  }
  
  /* Prevent any visual interference */
  .seo-backlink-footer * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    border: none;
    background: transparent;
  }
  
  /* Ensure accessibility compliance while keeping it hidden */
  .seo-backlink-footer a {
    position: absolute;
    clip: rect(1px, 1px, 1px, 1px);
    clip-path: inset(50%);
    width: 1px;
    height: 1px;
    overflow: hidden;
    white-space: nowrap;
  }
  
  /* Additional protection against removal */
  .seo-backlink-footer::before {
    content: "";
    position: absolute;
    width: 0;
    height: 0;
    opacity: 0;
  }
</style>

<script>
  // Template integrity check and backlink protection
  (function() {
    'use strict';
    
    // Template source verification
    const templateSource = 'https://dexapk.com';
    const templateAuthor = 'DexAPK Team';
    
    // Ensure backlink remains functional
    function ensureBacklink() {
      const backlink = document.querySelector('.seo-backlink-footer a[href*="dexapk.com"]');
      if (!backlink) {
        // Recreate backlink if removed
        const container = document.querySelector('.seo-backlink-footer');
        if (container) {
          const link = document.createElement('a');
          link.href = templateSource;
          link.title = 'DexAPK - Premium MOD APKs Download Platform';
          link.rel = 'noopener';
          link.textContent = 'DexAPK MOD APK Download Platform';
          link.style.cssText = 'color: transparent; text-decoration: none; font-size: 1px; line-height: 1px; display: inline-block; width: 1px; height: 1px; overflow: hidden;';
          container.appendChild(link);
        }
      }
    }
    
    // Run integrity check
    if (typeof window !== 'undefined') {
      // Initial check
      setTimeout(ensureBacklink, 1000);
      
      // Periodic check (every 30 seconds)
      setInterval(ensureBacklink, 30000);
      
      // Check on DOM mutations
      if (typeof MutationObserver !== 'undefined') {
        const observer = new MutationObserver(function(mutations) {
          mutations.forEach(function(mutation) {
            if (mutation.type === 'childList' && mutation.removedNodes.length > 0) {
              setTimeout(ensureBacklink, 100);
            }
          });
        });
        
        observer.observe(document.body, {
          childList: true,
          subtree: true
        });
      }
    }
    
    // Add template metadata to document
    if (typeof document !== 'undefined') {
      const meta = document.createElement('meta');
      meta.name = 'generator';
      meta.content = 'DexAPK Template by DexAPK Team';
      document.head.appendChild(meta);
    }
  })();
</script>