---
// Breadcrumb Navigation Component
// This component generates SEO-friendly breadcrumb navigation

export interface Props {
  items: {
    label: string;
    href: string;
    current?: boolean;
  }[];
}

const { items } = Astro.props;
---

<nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 overflow-hidden" aria-label="Breadcrumb">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="overflow-x-auto scrollbar-hide py-4">
      <ol class="flex items-center space-x-2 text-sm whitespace-nowrap" role="list" itemscope itemtype="https://schema.org/BreadcrumbList">
        {items.map((item, index) => (
          <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
            {index > 0 && (
              <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
            )}
            
            {item.current ? (
              <span 
                class="font-medium text-gray-900 dark:text-white" 
                aria-current="page"
                itemprop="name"
              >
                {item.label}
              </span>
            ) : (
              <a 
                href={item.href} 
                class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
                itemprop="item"
              >
                <span itemprop="name">{item.label}</span>
              </a>
            )}
            <meta itemprop="position" content={`${index + 1}`} />
          </li>
        ))}
      </ol>
    </div>
  </div>
</nav>