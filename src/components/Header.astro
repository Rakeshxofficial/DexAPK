---
// Header component with accessible navigation and controls - Mobile optimized with frosted glass effect
import Logo from './Logo.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 backdrop-blur-xl bg-white/80 dark:bg-gray-900/80 border-b border-white/20 dark:border-gray-700/30 shadow-lg shadow-black/5 dark:shadow-black/20">
  <!-- Frosted glass overlay for enhanced effect -->
  <div class="absolute inset-0 bg-gradient-to-r from-white/10 via-white/5 to-white/10 dark:from-gray-800/10 dark:via-gray-800/5 dark:to-gray-800/10"></div>
  
  <div class="relative max-w-7xl mx-auto px-3 sm:px-6 lg:px-8">
    <div class="relative flex items-center h-16 sm:h-20">
      
      <!-- Mobile Menu Button - Positioned absolutely on left -->
      <button 
        id="mobile-menu-button"
        class="md:hidden absolute left-0 inline-flex items-center justify-center p-2 rounded-xl text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-white/20 dark:hover:bg-gray-800/20 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500/50 transition-all duration-200 backdrop-blur-sm"
        aria-controls="mobile-menu"
        aria-expanded="false"
        aria-label="Toggle navigation menu"
      >
        <span class="sr-only">Open main menu</span>
        <!-- Hamburger Icon -->
        <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Logo - Perfectly Centered -->
      <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2">
        <a href="/" class="flex items-center group focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-xl p-2 transition-all duration-200 hover:bg-white/10 dark:hover:bg-gray-800/10 backdrop-blur-sm">
          <Logo size="xl" showText={false} />
        </a>
      </div>

      <!-- Desktop Navigation - Hidden on mobile, positioned on left -->
      <nav class="hidden md:flex space-x-6 lg:space-x-8" aria-label="Main navigation">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 hover:bg-white/10 dark:hover:bg-gray-800/10 backdrop-blur-sm">
          Home
        </a>
        <a href="/categories" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 hover:bg-white/10 dark:hover:bg-gray-800/10 backdrop-blur-sm">
          Categories
        </a>
        <a href="/trending" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 hover:bg-white/10 dark:hover:bg-gray-800/10 backdrop-blur-sm">
          Trending
        </a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 hover:bg-white/10 dark:hover:bg-gray-800/10 backdrop-blur-sm">
          About
        </a>
      </nav>

      <!-- Right Side Controls - Positioned absolutely on right -->
      <div class="absolute right-0 flex items-center space-x-2 sm:space-x-4">
        
        <!-- Search Button -->
        <button 
          id="search-button"
          class="inline-flex items-center justify-center p-2 rounded-xl text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-white/20 dark:hover:bg-gray-800/20 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500/50 transition-all duration-200 backdrop-blur-sm"
          aria-label="Search APKs"
        >
          <span class="sr-only">Search</span>
          <svg class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
          </svg>
        </button>

        <!-- Theme Toggle -->
        <button 
          id="theme-toggle"
          class="inline-flex items-center justify-center p-2 rounded-xl text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-white/20 dark:hover:bg-gray-800/20 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500/50 transition-all duration-200 backdrop-blur-sm"
          aria-label="Toggle dark mode"
        >
          <span class="sr-only">Toggle theme</span>
          <!-- Sun Icon (visible in dark mode) -->
          <svg class="h-4 w-4 sm:h-5 sm:w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
          </svg>
          <!-- Moon Icon (visible in light mode) -->
          <svg class="h-4 w-4 sm:h-5 sm:w-5 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white/90 dark:bg-gray-900/90 backdrop-blur-xl border-t border-white/20 dark:border-gray-700/30">
      <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 block px-3 py-2 rounded-xl text-base font-medium transition-all duration-200 hover:bg-white/20 dark:hover:bg-gray-800/20 backdrop-blur-sm">
        Home
      </a>
      <a href="/categories" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 block px-3 py-2 rounded-xl text-base font-medium transition-all duration-200 hover:bg-white/20 dark:hover:bg-gray-800/20 backdrop-blur-sm">
        Categories
      </a>
      <a href="/trending" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 block px-3 py-2 rounded-xl text-base font-medium transition-all duration-200 hover:bg-white/20 dark:hover:bg-gray-800/20 backdrop-blur-sm">
        Trending
      </a>
      <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 block px-3 py-2 rounded-xl text-base font-medium transition-all duration-200 hover:bg-white/20 dark:hover:bg-gray-800/20 backdrop-blur-sm">
        About
      </a>
    </div>
  </div>
</header>

<!-- Search Modal -->
<div id="search-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="search-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" aria-hidden="true"></div>
  <div class="fixed inset-0 z-50 overflow-y-auto">
    <div class="flex min-h-full items-start justify-center p-4 text-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-2xl bg-white/95 dark:bg-gray-800/95 backdrop-blur-xl px-4 pb-4 pt-5 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6 mx-4 border border-white/20 dark:border-gray-700/30">
        <div class="flex items-center justify-between mb-4">
          <h3 id="search-title" class="text-lg font-medium text-gray-900 dark:text-white">Search MOD APKs</h3>
          <button id="close-search" class="p-2 rounded-xl text-gray-400 hover:text-gray-500 dark:hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500/50 hover:bg-white/20 dark:hover:bg-gray-800/20 transition-all duration-200" aria-label="Close search">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="relative">
          <input 
            type="text" 
            id="search-input"
            class="w-full px-4 py-3 border border-gray-300/50 dark:border-gray-600/50 rounded-xl focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 dark:bg-gray-700/50 dark:text-white transition-all duration-200 backdrop-blur-sm bg-white/50"
            placeholder="Search for MOD APKs..."
            aria-label="Search for MOD APKs"
          />
          <div class="absolute inset-y-0 right-0 flex items-center pr-3">
            <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
  });

  // Theme toggle
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');
  });

  // Search modal
  const searchButton = document.getElementById('search-button');
  const searchModal = document.getElementById('search-modal');
  const closeSearchButton = document.getElementById('close-search');
  const searchInput = document.getElementById('search-input');

  searchButton?.addEventListener('click', () => {
    searchModal?.classList.remove('hidden');
    searchInput?.focus();
  });

  closeSearchButton?.addEventListener('click', () => {
    searchModal?.classList.add('hidden');
  });

  // Close modal on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !searchModal?.classList.contains('hidden')) {
      searchModal?.classList.add('hidden');
    }
  });

  // Close modal when clicking outside
  searchModal?.addEventListener('click', (e) => {
    if (e.target === searchModal) {
      searchModal.classList.add('hidden');
    }
  });

  // Enhanced scroll effect for header
  let lastScrollY = window.scrollY;
  
  window.addEventListener('scroll', () => {
    const header = document.querySelector('header');
    const currentScrollY = window.scrollY;
    
    if (header) {
      if (currentScrollY > 50) {
        // More blur and opacity when scrolled
        header.classList.add('backdrop-blur-2xl');
        header.classList.remove('backdrop-blur-xl');
        header.style.background = document.documentElement.classList.contains('dark') 
          ? 'rgba(17, 24, 39, 0.9)' 
          : 'rgba(255, 255, 255, 0.9)';
      } else {
        // Less blur and opacity at top
        header.classList.add('backdrop-blur-xl');
        header.classList.remove('backdrop-blur-2xl');
        header.style.background = document.documentElement.classList.contains('dark') 
          ? 'rgba(17, 24, 39, 0.8)' 
          : 'rgba(255, 255, 255, 0.8)';
      }
    }
    
    lastScrollY = currentScrollY;
  });
</script>

<style>
  /* Enhanced frosted glass effect */
  header {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }
  
  :global(.dark) header {
    background: rgba(17, 24, 39, 0.8);
    border-bottom: 1px solid rgba(75, 85, 99, 0.3);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  }
  
  /* Enhanced hover effects with glass morphism */
  button:hover, a:hover {
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  
  /* Mobile menu glass effect */
  #mobile-menu > div {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
  
  /* Search modal glass effect */
  #search-modal .relative.transform {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
  
  /* Smooth transitions */
  header, button, a {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced focus states */
  button:focus, a:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
  }
  
  /* Glass morphism gradient overlay */
  header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 50%, rgba(255, 255, 255, 0.1) 100%);
    pointer-events: none;
  }
  
  :global(.dark) header::before {
    background: linear-gradient(135deg, rgba(75, 85, 99, 0.1) 0%, rgba(75, 85, 99, 0.05) 50%, rgba(75, 85, 99, 0.1) 100%);
  }
</style>