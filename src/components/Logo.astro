---
// Logo component with actual DexAPK logo
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  showText?: boolean;
}

const { size = 'md', showText = true } = Astro.props;

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};

const textSizeClasses = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-3xl'
};
---

<div class="flex items-center space-x-3">
  <!-- DexAPK Logo -->
  <div class={`${sizeClasses[size]} relative flex items-center justify-center`}>
    <img 
      src="/file_0000000045f061fabb2c8f258123d45b.xml" 
      alt="DexAPK Logo"
      class="w-full h-full object-contain text-gray-900 dark:text-white"
      style="filter: brightness(0) saturate(100%) invert(0%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(0%) contrast(100%);"
      onload="this.style.filter = document.documentElement.classList.contains('dark') ? 'brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(100%) contrast(100%)' : 'brightness(0) saturate(100%) invert(0%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(0%) contrast(100%)';"
    />
  </div>
  
  <!-- DexAPK Text -->
  {showText && (
    <span class={`${textSizeClasses[size]} font-bold text-gray-900 dark:text-white tracking-tight`}>
      DexAPK
    </span>
  )}
</div>

<script>
  // Update logo color based on theme
  function updateLogoColor() {
    const logos = document.querySelectorAll('img[alt="DexAPK Logo"]');
    const isDark = document.documentElement.classList.contains('dark');
    
    logos.forEach(logo => {
      if (isDark) {
        logo.style.filter = 'brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(100%) contrast(100%)';
      } else {
        logo.style.filter = 'brightness(0) saturate(100%) invert(0%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(0%) contrast(100%)';
      }
    });
  }

  // Listen for theme changes
  const observer = new MutationObserver(updateLogoColor);
  observer.observe(document.documentElement, { 
    attributes: true, 
    attributeFilter: ['class'] 
  });

  // Initial update
  document.addEventListener('DOMContentLoaded', updateLogoColor);
</script>