---
// Logo component with proper Android head and DexAPK text layout
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  showText?: boolean;
}

const { size = 'md', showText = false } = Astro.props;

const sizeClasses = {
  sm: 'w-12 h-16',
  md: 'w-16 h-20',
  lg: 'w-20 h-24'
};
---

<div class="flex flex-col items-center">
  <!-- Android Head Logo -->
  <div class={`${sizeClasses[size]} relative flex flex-col items-center justify-center`}>
    <!-- Android Head (Top Half) -->
    <div class="w-full h-3/5 flex items-center justify-center mb-1">
      <svg 
        viewBox="0 0 100 60" 
        class="w-full h-full text-gray-900 dark:text-white"
        fill="currentColor"
        aria-hidden="true"
      >
        <!-- Android Head Shape -->
        <path d="M20 40 Q20 15 50 15 Q80 15 80 40 L80 55 L20 55 Z" />
        
        <!-- Left Antenna -->
        <line x1="35" y1="15" x2="30" y2="5" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
        
        <!-- Right Antenna -->
        <line x1="65" y1="15" x2="70" y2="5" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
        
        <!-- Left Eye -->
        <circle cx="40" cy="28" r="3" fill="white"/>
        
        <!-- Right Eye -->
        <circle cx="60" cy="28" r="3" fill="white"/>
      </svg>
    </div>
    
    <!-- DexAPK Text (Bottom) -->
    <div class="w-full h-2/5 flex items-center justify-center">
      <svg 
        viewBox="0 0 200 40" 
        class="w-full h-full text-gray-900 dark:text-white"
        fill="currentColor"
        aria-hidden="true"
      >
        <!-- D -->
        <path d="M5 5 L5 35 L18 35 Q28 35 28 20 Q28 5 18 5 Z M12 12 L18 12 Q21 12 21 20 Q21 28 18 28 L12 28 Z"/>
        
        <!-- e -->
        <path d="M35 15 Q45 15 45 20 L35 20 Q35 25 40 25 Q43 25 45 23 L45 28 Q43 30 40 30 Q30 30 30 22.5 Q30 15 40 15 Q45 15 45 20 L40 20 Q35 20 35 22.5"/>
        
        <!-- x -->
        <path d="M50 15 L58 25 L50 35 L55 35 L60 28 L65 35 L70 35 L62 25 L70 15 L65 15 L60 22 L55 15 Z"/>
        
        <!-- A -->
        <path d="M75 35 L78 28 L87 28 L90 35 L95 35 L85 15 L80 15 L70 35 Z M80 23 L85 23 L82.5 18 Z"/>
        
        <!-- P -->
        <path d="M100 5 L100 35 L107 35 L107 25 L115 25 Q125 25 125 17.5 Q125 10 115 10 L107 10 L107 5 Z M107 15 L115 15 Q118 15 118 17.5 Q118 20 115 20 L107 20 Z"/>
        
        <!-- K -->
        <path d="M130 5 L130 35 L137 35 L137 22 L145 35 L152 35 L142 20 L152 5 L145 5 L137 15 L137 5 Z"/>
      </svg>
    </div>
  </div>
</div>